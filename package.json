{
  "name": "monitor",
  "version": "0.3.0",
  "description": "Application to monitor the status of a remote factomd instance, with built in phonecall alert in the event of factomd failure.",
  "main": "monitor.js",
  "scripts": {
    "test-watch": "nodemon --exec 'npm test'",
    "test-watch-debugger": "nodemon --exec 'npm run test-debugger'",
    "test": "mocha ./test/*.test.js",
    "test-debugger": "mocha --inspect-brk ./test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Factoshi/Node-Monitor.git"
  },
  "keywords": [
    "Factom",
    "factomd",
    "monitor",
    "alert",
    "Twilio"
  ],
  "author": "Alex Carrithers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Factoshi/Node-Monitor/issues"
  },
  "homepage": "https://github.com/Factoshi/Node-Monitor#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "moment": "^2.22.2",
    "twilio": "^3.17.6",
    "yaml-js": "^0.2.3"
  },
  "devDependencies": {
    "mocha": "^5.2.0"
  }
}
